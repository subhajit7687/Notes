<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Notes" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:statusBarColor">@color/theme_accent</item>
        <item name="android:navigationBarColor">@color/theme_accent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="actionMenuTextAppearance">@style/MenuTextColor</item>
        <item name="android:textColorHighlight">@color/theme_accent</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
        <item name="colorControlActivated">@color/theme_text_and_icon_accent</item>
    </style>

    <style name="Theme.Notes" parent="Base.Theme.Notes" />

    <style name="MenuTextColor" parent="TextAppearance.AppCompat.Menu">
        <item name="actionMenuTextColor">@color/theme_text_and_icon_accent</item>
        <item name="android:textSize">18sp</item>
        <item name="textAllCaps">false</item>
    </style>

</resources>